<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topBody"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/White"
        android:orientation="horizontal"
        android:weightSum="6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/navi_top_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/left" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/navi_top_mode1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/busnormal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/navi_top_mode2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/walkpress" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/navi_top_mode3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/bicyclepress" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/navi_top_mode4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/mixpress" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/navi_top_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="@color/BottomGreen"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/bottomline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/main_tab_radiogroup"
        android:background="@color/BottomGrey"></FrameLayout>

    <LinearLayout
        android:id="@+id/middleBody"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#efeff4"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imagegreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/greenserach" />

            <ImageView
                android:id="@+id/imageyellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:src="@drawable/redserach" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">


            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="我的位置"
                android:textColor="@color/BottomGreen" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:hint="目的地" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/loop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:src="@drawable/loop" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottomBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/search_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </RelativeLayout>

</LinearLayout>